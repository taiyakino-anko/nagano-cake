<div class ="container">
  <div class ="row">
    <h2>商品新規登録</h2>
    <%= form_with model:@item do |f| %>
      <table>
        
        <tr>
          <th>商品画像</th>
          <th><%= f.file_field :image, accept: "image/*" %></th>
        </tr>
        
        <tr>
          <td>商品名</td>
          <td><%= f.text_field :name %></td>
        </tr>
        
        <tr>
          <td>商品説明</td>
          <td><%= f.area_field :explanation %></td>
        </tr>
        
        <tr>
          <td>ジャンル</td>
          <!--あとでジャンルのフォームを入れる-->
          <td></td>
        </tr>
        
        <tr>
          <td>税抜価格</td>
          <td><%= f.text_field :price %></td>
        </tr>
        
        <tr>
          <td>販売ステータス</td>
          <td></td>
        </tr>
      </table>
    <% end %>
  </div>
</div>