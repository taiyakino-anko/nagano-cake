<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h2>商品紹介</h2>
      <%= image_tag @item.image, size: "300x200" %>
    </div>
    <div class="col-md-8">
      <table class="table">
        <tr>
          <th>商品名</th>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= @item.explanation %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= @item.genre.category %></td>
        </tr>
        <tr>
          <th>税込価格<br>(税抜価格)</th>
          <td><%= number_to_currency(@item.add_tax_sales_price, unit: "¥") %><br>(<%= number_to_currency(@item.price, unit: "¥") %>)</td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <td><%= @item.selling_status %></td>
        </tr>
        <tr>
          <td colspan="2"><%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-primary" %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
