<div class="container my-4">
  <div class ="row justify-content-center">
    <h2 class ="text-danger"><%= flash[:danger] %></h2>
  </div>
  <div class="row">
    <div class="col-md-12">
      <h3>ジャンル一覧、追加</h3>
      <table>
        <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
          <tr>
            <th><%= f.label :category, "ジャンル" %></th>
            <td><%= f.text_field :category %></td>
            <td><%= f.submit "新規登録", class: "btn btn-primary btn-block" %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
  <div class ="row my-4">
    <div class="col-md-6">
      <table class ="table">
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
        <% @genres.each do |genre| %>
          <tr>
            <th><%= genre.category %></th>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-primary btn-block" %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
