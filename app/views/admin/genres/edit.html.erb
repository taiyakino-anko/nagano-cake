<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>編集画面</h2>

      <%= form_with model:@genre, url: admin_genre_path do |f| %>
        <div class="form-group">
          <label for="genre_category">ジャンル名</label>
          <%= f.text_field :category, id: "genre_category" %>
        </div>
        <%= f.submit '保存', class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
