<div class="container my-4">
  <div class="row">
    <div class="col-md-12">
      <h2>編集画面</h2>
    </div>
  </div>
    <%= form_with model:@genre, url: admin_genre_path do |f| %>
      <div class ="row my-4">
        <div class ="col-md-2">
          <label for="genre_category">ジャンル名</label>
        </div>
        <div class ="col-md-4">
          <%= f.text_field :category, id: "genre_category" %>
        </div>
        <div class ="col-md-2">
          <%= f.submit '保存', class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
</div>
