<div class ="container my-4">
  <div class ="row">
    <div class ="col-md-12">
      <h2><%= @customer.first_name %><%= @customer.last_name %>さんの会員詳細</h2>
    </div>
  </div>

  <div class ="row mt-4">
    <div class ="col-md-4">
      <p>会員ID</p>
    </div>
    <div class ="col-md-8">
      <%= @customer.id %>
    </div>
  </div>

  <div class ="row">
    <div class ="col-md-4">
      <p>氏名</p>
    </div>
    <div class ="col-md-8">
      <%= @customer.first_name %><%= @customer.last_name %>
    </div>
  </div>

  <div class ="row">
    <div class ="col-md-4">
      <p>フリガナ</p>
    </div>
    <div class ="col-md-8">
      <%= @customer.first_name_kana %><%= @customer.last_name_kana %>
    </div>
  </div>

  <div class ="row">
    <div class ="col-md-4">
      <p>郵便番号</p>
    </div>
    <div class ="col-md-8">
      <%= @customer.postal_code %>
    </div>
  </div>

  <div class ="row">
    <div class ="col-md-4">
      <p>住所</p>
    </div>
    <div class ="col-md-8">
      <%= @customer.address %>
    </div>
  </div>

  <div class ="row">
    <div class ="col-md-4">
      <p>電話番号</p>
    </div>
    <div class ="col-md-8">
      <%= @customer.telephone_number %>
    </div>
  </div>

  <div class ="row">
    <div class ="col-md-4">
      <p>メールアドレス</p>
    </div>
    <div class ="col-md-8">
      <%= @customer.email %>
    </div>
  </div>

  <div class ="row">
    <div class ="col-md-4">
      <p>会員ステータス</p>
    </div>
    <div class ="col-md-8">
      <% if @customer.is_deleted == false %>
				有効
			<% else %>
				退会
			<% end %>
    </div>
  </div>

  <div class ="row mt-4">
    <div class ="col-md-4"></div>
    <div class ="col-md-4">
      <%= link_to "編集する", edit_admin_customer_path(@customer), class: "btn btn-success" %>
    </div>
    <div class ="col-md-4">
    </div>
  </div>

</div>