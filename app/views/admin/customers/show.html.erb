<div class ="container my-4">
  <div class ="row">
    <div class ="col-md-12">
      <h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h2>
    </div>
  </div>
  
  <div class ="row">
    <div class ="col-md-4">
      <p>会員ID</p>
    </div>
    <div class ="col-md-8">
      <%= @customer.id %>
    </div>
  </div>
  
  <div class ="row">
    <div class ="col-md-4">
      <p>氏名</p>
    </div>
    <div class ="col-md-8">
      <%= @customer.last_name %><%= @customer.first_name %>
    </div>
  </div>
  
  <div class ="row">
    <div class ="col-md-4">
      <p>フリガナ</p>
    </div>
    <div class ="col-md-8">
      <%= @customer.last_name_kana %><%= @customer.first_name_kana %>
    </div>
  </div>
  
  <div class ="row">
    <div class ="col-md-4">
      <p>郵便番号</p>
    </div>
    <div class ="col-md-8">
      <%= @customer.postal_code %>
    </div>
  </div>
  
  <div class ="row">
    <div class ="col-md-4">
      <p>住所</p>
    </div>
    <div class ="col-md-8">
      <%= @customer.address %>
    </div>
  </div>
  
  <div class ="row">
    <div class ="col-md-4">
      <p>電話番号</p>
    </div>
    <div class ="col-md-8">
      <%= @customer.telephone_number %>
    </div>
  </div>
  
  <div class ="row">
    <div class ="col-md-4">
      <p>メールアドレス</p>
    </div>
    <div class ="col-md-8">
      <%= @customer.email %>
    </div>
  </div>
  
  <div class ="row">
    <div class ="col-md-4">
      <p>会員ステータス</p>
    </div>
    <div class ="col-md-8">
      <%= @customer.is_deleted %>
    </div>
  </div>
</div>