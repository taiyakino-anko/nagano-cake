<div class ="container my-4">
  <div class ="row my-4">
    <div class ="col-md-5">
      <h2>注文履歴一覧</h2>
    </div>
  </div>

  <div class ="row my-4">
    <div class ="col-md-12">
      <table class ="table">
        <tr>
          <td>購入日時</td>
          <td>購入者</td>
          <td>注文個数</td>
          <td>注文ステータス</td>
        </tr>
        <% @orders.each do |order| %>
          <tr>
            <th><%=link_to order.created_at.strftime('%Y/%m/%d %H:%M:%S'),admin_order_path(order) %></th>
            <th><%= order.customer.last_name %><%= order.customer.first_name %></th>
            <th><%= order.order_details.amount %></th>
            <th><%= order.order_status_i18n %></th>
          </tr>
        <% end %>
      </table>
    </div>
    <div class ="row  justify-content-center">
      <%= paginate @orders, theme: 'bootstrap-5' %>
    </div>
  </div>
</div>