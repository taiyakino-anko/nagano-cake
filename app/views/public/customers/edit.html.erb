<div class='container'>
  <div class='row'>
    <div class="col-md-12 px-5 px-sm-0">
      <h2>会員編集画面</h2>
      <%= render "public/shared/error_messages", resource: @customer %>
      <%= form_with model: @customer, url: update_customer_path, local: true do |f| %>

        <div class="row pt-md-3">
          <div class="col-md-2">
            氏名
          </div>
          <div class="col-md-1"></div>
          <div class="col-md-3 form-group">
            <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
          </div>
          <div class="col-md-2"></div>
          <div class="col-md-3 form-group">
            <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
          </div>
          <div class="col-md-1"></div>
        </div>

        <div class="row">
          <div class="col-md-2">
            フリガナ
          </div>
          <div class="col-md-1"></div>
          <div class="col-md-3 form-group">
            <%= f.text_field :first_name_kana, autofocus: true, class: "form-control" %>
          </div>
          <div class="col-md-2"></div>
          <div class="col-md-3 form-group">
            <%= f.text_field :last_name_kana, autofocus: true, class: "form-control" %>
          </div>
          <div class="col-md-1"></div>
        </div>

        <div class="row">
          <div class="col-md-3">郵便番号</div>
          <div class="col-md-3 form-group">
            <%= f.text_field :postal_code, autofocus: true, class: "form-control pastal_code" %>
          </div>
          <div class="col-md-2"></div>
          <div class="col-md-3 form-group"></div>
          <div class="col-md-1"></div>
        </div>

        <div class="row">
          <div class="col-md-2">
            住所
          </div>
          <div class="col-md-1"></div>
          <div class="col-md-9 form-group">
            <%= f.text_field :address, autofocus: true, class: "form-control address" %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-3">電話番号</div>
          <div class="col-md-3 form-group">
            <%= f.text_field :telephone_number, autofocus: true, class: "form-control telephone_number" %>
          </div>
          <div class="col-md-2"></div>
          <div class="col-md-3 form-group"></div>
          <div class="col-md-1"></div>
        </div>

        <div class="row">
          <div class="col-md-3">メールアドレス</div>
          <div class="col-md-3 form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
          <div class="col-md-2"></div>
          <div class="col-md-3 form-group"></div>
          <div class="col-md-1"></div>
        </div>

        <div class='row'>
          <div class="col-md-3"></div>
          <div class="col-md-5 form-group">
            <%= f.submit "編集内容を保存",class: 'btn btn-block btn-success' %>
          </div>
          <div class="col-md-1"></div>
          <div class="col-md-2 form-group">
            <%= link_to "退会する", unsubscribe_path, class: 'btn btn-block btn-danger' %>
          </div>
          <div class="col-md-1"></div>
        </div>

      <% end %>
    </div>
  </div>
</div>
