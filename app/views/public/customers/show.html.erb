<div class='container'>
  <div class='row'>
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>マイページ</h2>
      <tr>
        <th>登録情報</th>
        <th><%= link_to "編集する", edit_customer_path(@customer), class: "btn btn-success" %></th>
      </tr>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th scope="row">氏名</th>
            <td><%= @customer.last_name %><%= @customer.first_name %></td>
          </tr>
          <tr>
            <th scope="row">カナ</th>
            <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <th scope="row">郵便番号</th>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <th scope="row">住所</th>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <th scope="row">電話番号</th>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <th scope="row">メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>
        </tbody>
      </table>
      <tr>
        <th>配送先</th>
        <th><%= link_to "一覧を見る", addresses_path(@customer), class: "btn btn-primary" %></th>
      </tr>
      <tr>
        <th>注文履歴</th>
        <th><%= link_to "一覧を見る", orders_path(@customer), class: "btn btn-primary" %></th>
      </tr>
    </div>
  </div>
</div>
