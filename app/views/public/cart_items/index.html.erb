<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2 class="text-center mb-5">ショッピングカート</h2>
      <div class="text-right mb-3">
        <%= link_to destroy_all_cart_items_path, method: :delete, class: "btn btn-danger" do %>
          カートを空にする
        <% end %>
      </div>
      <table class="table">
        <thead class="thead-dark">
          <tr>
            <th scope="col">商品名</th>
            <th scope="col">単価(税込)</th>
            <th scope="col">数量</th>
            <th scope="col">小計</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <td><%= cart_item.item.name %></td>
            <td><%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
            <td>
              <%= form_with model: cart_item, url: cart_item_path(cart_item), local: true do |f| %>
              <%= f.hidden_field :id, :value => cart_item.id %>
              <%= f.number_field :amount, size: 1, min: 1, class: "form-control" %>
              <%= f.submit "変更", class: "btn btn-primary mt-2" %>
              <% end %>
            </td>
            <td><%= cart_item.subtotal %></td>
            <% @total_price +=  cart_item.subtotal %>
          </tr>
          <% end %>
          <tr>
            <td colspan="3" class="text-right font-weight-bold">合計金額</td>
            <td class="font-weight-bold"><%= @total_price %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
