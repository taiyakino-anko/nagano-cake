<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header text-center">
          <h2>ログイン</h2>
        </div>
        <div class="card-body">
          <%= form_with(model: resource, local: true, url: session_path(resource_name), class: "needs-validation", novalidate: true) do |f| %>
            <div class="form-group">
              <%= f.label :メールアドレス %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
              <div class="invalid-feedback">メールアドレスを入力してください。</div>
            </div>
            <div class="form-group">
              <%= f.label :パスワード %>
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control", required: true %>
              <div class="invalid-feedback">パスワードを入力してください。</div>
            </div>
            <% if devise_mapping.rememberable? %>
              <div class="form-group form-check">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, class: "form-check-label" %>
              </div>
            <% end %>
            <div class="form-group text-center">
              <button type="submit" class="btn btn-primary">ログイン</button>
            </div>
          <% end %>
          <div class="text-center">
            <p>会員登録がお済でない方</p>
            <div><%= link_to "こちら", new_customer_registration_path %>から新規登録を行ってください。</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

