<div class='container'>
  <div class='row'>
    <div class='col-md-12'>
      <h2>注文履歴一覧</h2>
        <table class='table table-bordered'>
          <thead>
            <tr>
              <th scope='row'>注文日</th>
              <th scope='row'>配送先</th>
              <th scope='row'>注文商品</th>
              <th scope='row'>支払金額</th>
              <th scope='row'>ステータス</th>
              <th scope='row'>注文詳細</th>
            </tr>
          </thead>
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
                <td><%= order.address %></td>
                <td>
                  <% order.order_details.each do |order_detail| %>
                    <p><%= order_detail.item.name %></p>
                  <% end %>
                </td>
                <td><%= order.total_payment %></td>
                <td><%= order.order_status_i18n %></td>
                <td><%= link_to "表示する", order_path(current_customer), class: "btn btn-primary" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>
