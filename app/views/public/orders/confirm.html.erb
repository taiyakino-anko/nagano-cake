<div class='container'>
  <div class='row'>
    <div class="col-md-12">
      <h2>注文情報確認</h2>
      <div class='row'>
        <div class='col-md-7'>
          <table class='table'>
            <thead>
              <tr>
                <th scope="row">商品名</th>
                <th scope="row">単価（税込）</th>
                <th scope="row">数量</th>
                <th scope="row">小計</th>
              </tr>
            </thead>
            <tbody>
              <% total = 0 %>
              <% @cart_items.each do |cart_item| %>
                <tr>
                  <td>
                    <%= attacment_image_tag(cart_item_item, :image, size: "60x50", fallback: "no_image.jpg") %>
                    <%= cart_item.item.name %>
                  </td>
                  <td><%= (cart_item.item.price*1.10).to_i %></td>
                  <td><%= cart_item.amount %></td>
                  <td>
                    <% subtotal = ((cart_item.item.price*cart_item.amount)*1.10).to_i %>
                    <%= subtotal %>
                  </td>
                </tr>
                <% total += (cart_item.item.price*cart_item.amount)*1.10 %>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="col-md-4 offset-md-1">
          <table class='table'>
            <tr>
              <th>送料</th>
              <% @order.delivery_cost = 800 %>
              <td><%= @order.delivery_cost %></td>
            </tr>
            <tr>
              <th>商品合計</th>
              <td><%= total.to_i %></td>
            </tr>
            <tr>
              <th>請求金額</th>
              <% @order.total_payment = @order.delivery_cost + total.to_i %>
              <td><%= @order.total_payment %></td>
            </tr>
          </table>
        </div>
      </div>
      <div class='row'>
        <div class='col-md-11 offset-md-1'>
          <table class="table table-borderless">
            <tr><th class="col-md-1">支払い方法</th><td class="col-md-10"><%= @order.payment_method %></td></tr>
            <tr>
              <th class="col-md-1">お届け先</th>
              <td class="col-md-10">
                <%= @order.postal_code %>
                <%= @order.address %>
                <%= @order.name %>
              </td>
            </tr>
          </table>
        </div>
      </div>
      <div class="row justify-content-center">
        <%= form_with model: @order, url: order_orders_finish_path, method: :get, local: true do |f| %>
          <%= f.hidden_field :customer_id %>
          <%= f.hidden_field :delivery_cost %>
          <%= f.hidden_field :total_payment %>
          <%= f.hidden_field :payment_method %>
          <%= f.hidden_field :name %>
          <%= f.hidden_field :address %>
          <%= f.hidden_field :postal_code %>
          <%= f.hidden_field :status %>
         <%= f.submit "注文を確定する" ,class= "btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>