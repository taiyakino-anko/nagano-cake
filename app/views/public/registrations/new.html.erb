<div class='container'>
  <div class='row'>
    <div class="col-md-12 px-5 px-sm-0">
      <h2>新規会員登録</h2>
      <%= form_with model: @customer, url: customer_registration_path,  class: 'new_customer', local: true do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="row">
          <div class="col-md-2">
            名前
          </div>
          <div class="col-md-1">
          <%= f.label :first_name, "姓" %>
          </div>
          <div class="col-md-4 form-group">
            <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
          </div>
          <div class="col-md-1">
          <%= f.label :last_name, "名" %>
          </div>
          <div class="col-md-4 form-group">
            <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-2">
            フリガナ
          </div>
          <div class="col-md-1">
          <%= f.label :first_name_kana, "セイ" %>
          </div>
          <div class="col-md-4 form-group">
            <%= f.text_field :first_name_kana, autofocus: true, class: "form-control" %>
          </div>
          <div class="col-md-1">
          <%= f.label :last_name_kana, "メイ" %>
          </div>
          <div class="col-md-4 form-group">
            <%= f.text_field :last_name_kana, autofocus: true, class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-3">メールアドレス</div>
          <div class="col-md-4 form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
          <div class="col-md-1"></div>
          <div class="col-md-4 form-group"></div>
        </div>

        <div class="row">
          <div class="col-md-3">郵便番号</div>
          <div class="col-md-4 form-group">
            <%= f.text_field :postal_code, autofocus: true, class: "form-control pastal_code" %>
          </div>
          <div class="col-md-1"></div>
          <div class="col-md-4 form-group"></div>
        </div>

        <div class="row">
          <div class="col-md-2">
            住所
          </div>
          <div class="col-md-1"></div>
          <div class="col-md-9 form-group">
            <%= f.text_field :address, autofocus: true, class: "form-control address" %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-3">電話番号（ハイフンなし）</div>
          <div class="col-md-4 form-group">
            <%= f.text_field :telephone_number, autofocus: true, class: "form-control telephone_number" %>
          </div>
          <div class="col-md-1"></div>
          <div class="col-md-4 form-group"></div>
        </div>

        <div class="row">
          <div class="col-md-3">パスワード(6文字以上)</div>
          <div class="col-md-4 form-group">
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>
          <div class="col-md-1"></div>
          <div class="col-md-4 form-group"></div>
        </div>

        <div class="row">
          <div class="col-md-3">パスワード(確認用)</div>
          <div class="col-md-4 form-group">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>
          <div class="col-md-1"></div>
          <div class="col-md-4 form-group"></div>
        </div>

        <div class='row'>
          <div class="col-md-3"></div>
          <div class="col-md-4 form-group">
            <%= f.submit "新 規 登 録",class: 'btn btn-block btn-success' %>
          </div>
          <div class="col-md-1"></div>
          <div class="col-md-4 form-group"></div>
        </div>

      <% end %>
      <h2>既に登録済みの方</h2>
      <P><%= link_to "こちら",new_customer_session_path %>からログインしてください。</P>
    </div>
  </div>
</div>
