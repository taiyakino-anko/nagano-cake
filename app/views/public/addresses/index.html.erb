<div class="container">
  <div class="row">
    <div class="col-md-10">
      <h2>配送先登録/一覧</h2>
    <%= form_with model: @address, url: addresses_path, local: true do |f| %>
    <div class="row">
      <div class="col-md-5">郵便番号(ハイフンなし)</div>
      <div class="col-md-4 form-group">
        <%= f.text_field :postal_code, autofocus: true, class: "form-control postal_code" %>
      </div>
    </div>
    <div class="row">
     <div class="col-md-5">住所</div>
     <div class="col-md-7 form-group">
          <%= f.text_field :address, autofocus: true, class: "form-control address" %>
     </div>
    </div>
    <div class="row">
      <div class="col-md-5">宛名</div>
      <div class="col-md-4 form-group">
       <%= f.text_field :name, autofocus: true, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
       <%= f.submit "新規登録",class: 'btn btn-sm btn-success' %>
     </div>
      <% end %>
    </div>
　 </div>
    <div class="col-12">
      <table class="table">
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
            <tr>
              <td><%= address.postal_code %></td>
              <td><%= address.address %></td>
              <td><%= address.name %></td>
          
              <td class="text-center">
                <%= link_to "編集する", edit_address_path(address), class: "btn btn-success" %>
                <%= link_to "削除する", address_path(address), method: :delete, class: "btn btn-danger", data: {confirm: "Are you sure?"} %>
              </td>
            </tr>
         <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
